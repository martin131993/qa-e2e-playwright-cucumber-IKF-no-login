{
  "name": "qa-e2e-playwright-cucumber",
  "version": "1.0.0",
  "description": "Automatizaci√≥n - flujo de compra sin login",
  "license": "MIT",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test:bdd": "npx cucumber-js --require-module ts-node/register --require ./tests/steps/**/*.ts",
    "test:bdd:headed": "HEADLESS=false npx cucumber-js --require-module ts-node/register --require ./tests/steps/**/*.ts",
    "test:uat": "cross-env UAT_MODE=true npm run test:bdd",
    "test:prd": "cross-env UAT_MODE=false npm run test:bdd",
    "pw:trace:view": "npx playwright show-trace trace.zip"
  },
  "dependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "chai": "^6.2.0",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/node": "^24.9.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
